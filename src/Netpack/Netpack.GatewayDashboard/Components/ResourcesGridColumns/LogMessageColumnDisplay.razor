@namespace Netpack.GatewayDashboard.Components

@using Netpack.GatewayDashboard.Extensions
@using Netpack.GatewayDashboard.Otlp.Model
@using Netpack.GatewayDashboard.Resources

@inject IStringLocalizer<StructuredLogs> Loc

<GridValue Value="@LogEntry.Message"
           ValueDescription="@Loc[nameof(StructuredLogs.StructuredLogsMessageColumnHeader)]"
           EnableHighlighting="true"
           HighlightText="@FilterText"
           StopClickPropagation="true">
    <ContentInButtonArea>
        <ExceptionDetails ExceptionText="@_exceptionText" />
    </ContentInButtonArea>
</GridValue>

@code {
    [Parameter, EditorRequired]
    public required OtlpLogEntry LogEntry { get; set; }

    [Parameter, EditorRequired]
    public required string FilterText { get; set; }
}
